{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <p style="font-size:25px;">Profil de <b>{{ user.username }}</b></p>

    <table class="table">
        <tbody>
            {% if (app.user and (app.user.id == user.id)) %}
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            {% endif %}
            {% if user.bio %}
            <tr>
                <th>Bio</th>
                <td>{{ user.bio }}</td>
            </tr>
            {% endif %}
            {% if user.club %}
                <tr>
                    <th>Club support√©</th>
                    <td><a href="{{ path('club_show', {'id': user.club.id}) }}">{{ user.club }}</a></td>
                </tr>
            {% endif %}
        </tbody>
    </table>
{% if (app.user and (app.user.id == user.id)) %}

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
{% endif %}
    <a href="{{ path('user_index') }}">back to list</a>
{% endblock %}

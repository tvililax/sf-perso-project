{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            {% if user.bio %}
            <tr>
                <th>Bio</th>
                <td>{{ user.bio }}</td>
            </tr>
            {% endif %}
            {% if user.club %}
            <tr>
                <th>Club support√©</th>
                <td>{{ user.club }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>
{% if (app.user and (app.user.id == user.id)) %}

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
{% endif %}
    <a href="{{ path('user_index') }}">back to list</a>
{% endblock %}

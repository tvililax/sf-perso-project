{% extends 'base.html.twig' %}

{% block title %}Mon site - Bienvenue{% endblock %}

{% block body %}
{% set flag = false %}

<div class="example-wrapper">

{% if app.user %}
    <h1>Hello {{ app.user.username }} :)</h1>

    {% for post in posts %}

      {% for friend in app.user.friends %}

        {% if post.author.id == friend.id %}
          {% set flag = true %}
          <div class="post-line" style="background:#3c3c3c;">
            <p> {{ post.author.username }} <br> {{ post.content }} - <span class="sm-txt">{{ post.postedAt|format_datetime(locale='fr') }}</span></p>
          </div>

        {% endif %}

      {% endfor %}
      

    {% endfor %}

    {% if not flag %}
      <p>Il n'y a pas de messages sur votre fil d'actualit√©s :( <br> Suivez plus de personnes.</p>
    {% endif %}

